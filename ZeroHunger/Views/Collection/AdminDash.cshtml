@model IEnumerable<ZeroHunger.EF.Restaurent>

@{
    ViewBag.Title = "AdminDash";
}

<h2>AdminDash</h2>

<p>
    <a href="/Collection/AcceptedList/">Accepted List</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.food)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expiredate)
        </th>
        <th>
            Operations
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.food)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expiredate)
        </td>
        <td>
            <a href="/Collection/Accept/@item.id" class="btn btn-success">
                Accept
            </a>
            <a href="" class="btn btn-danger">
                Reject
            </a>
        </td>
    </tr>
}

</table>
